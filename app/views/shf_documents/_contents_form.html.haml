= form_tag({ controller: 'shf_documents', action: 'contents_update' },
           { method: 'patch' }) do

  = label_tag :title, 'Page Title'
  = text_field_tag :title, @title

  = label_tag :contents, 'Page Contents'
  = cktext_area_tag :contents, @contents

  .actions
    = submit_tag t('submit')
