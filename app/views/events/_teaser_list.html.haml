#company-events

  %table.table.table-hover
    %thead
      %tr
        %th
          #{t('events.show.name')}
        %th
          #{t('events.show.start_date')}
      %tr
    %tbody
      - if events.any?
        - events.each do |event|
          %tr.event
            %td.event-name
              = event.name
            %td.event-start-date
              = event.start_date
      - else
        %tr.event
          %td.event-name(colspan = '2')
            #{t('events.show.no_events')}
