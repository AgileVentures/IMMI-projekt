%header.entry-header
  %h1.entry-title= @admin_only_master_checklist_type.name

.entry-content.container-fluid

  .row
    .col.name
      = field_or_none(t('.name'),
      @admin_only_master_checklist_type.name, tag_options: {class: 'name'})

  .row
    .col.name
      = field_or_none(t('.description'),
      @admin_only_master_checklist_type.description, tag_options: {class: 'description'})

  %hr
  .text-center
    = link_to t('.edit_master_checklist_type', name: @admin_only_master_checklist_type.name), edit_admin_only_master_checklist_type_path(@admin_only_master_checklist_type), class:'btn btn-light btn-sm'
    = link_to t('.all_master_checklist_types'), :back, class: 'btn btn-light btn-sm'
