%header.entry-header
  %h1.entry-title= t('.title')
  .post-title-divider
  %span

.entry-content

  = form_for(@app_configuration, url: app_configuration_path,
                                 html: { method: :put }) do |f|
    .row
      .col-sm-6
        = render 'image_edit', app_config: @app_configuration,
                               image_title: 'chair_signature',
                               f: f
      .col-sm-6
        = render 'image_edit', app_config: @app_configuration,
                               image_title: 'shf_logo',
                               f: f
    .row
      %hr
      .col-sm-6
        = render 'image_edit', app_config: @app_configuration,
                               image_title: 'h_brand_logo',
                               f: f
      .col-sm-6
        = render 'image_edit', app_config: @app_configuration,
                               image_title: 'sweden_dog_trainers',
                               f: f

    .col-sm-12.wpcf7
      = f.submit "#{t('submit')}"
      %br
      = link_to "#{t('back')}", :back
