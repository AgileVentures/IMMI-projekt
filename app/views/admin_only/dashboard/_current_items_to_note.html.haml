- i18n_scope = 'admin_only.dashboard'
#current-activity
  .row
    .col-md-11
      %h3.section-title= t('current_items_section_title', scope: i18n_scope)

  .current-items-of-note
    .row
      .col-md-9
        .shf-applications
          %h4
            = styled_total(apps_without_uploads.count,
                           t('open_apps_no_files', scope: i18n_scope))

    .row
      .col-md-9
        .shf-applications
          %h4
            = styled_total(apps_approved_member_fee_not_paid.count,
                           t('app_approved_no_payment', scope: i18n_scope))

    .row
      .col-md-9
        .companies
          %h4
            = styled_total(companies_branding_not_paid.count,
                           t('companies_no_branding_payment', scope: i18n_scope))

            %p
              = styled_total(companies_info_not_completed.count,
                           t('companies_incomplete', scope: i18n_scope))
