- i18n_scope = 'admin_only.dashboard'
.row
  .col-md-11
    %h3.section-title= t('current_items_section_title', scope: i18n_scope)

  .row
    .col-md-9
      .shf-applications
        %h4
          %span.total= @apps_without_uploads.count
          = t('open_apps_no_files', scope: i18n_scope)

  .row
    .col-md-9
      .shf-applications
        %h4
          %span.total= @apps_approved_member_fee_not_paid.count
          = t('app_approved_no_payment', scope: i18n_scope)

  .row
    .col-md-9
      .companies
        %h4
          %span.total= @companies_branding_not_paid.count
          = t('companies_no_branding_payment', scope: i18n_scope)
          %p
            %span.total= @companies_info_not_completed.count
            companies with information not yet complete (link to details)
            = t('companies_incomplete', scope: i18n_scope)
