- provide :signoff do
  = render 'application_mailer/signoff'

- message_scope = 'mailers.member_mailer.h_branding_fee_will_expire.message_text'

= render layout: 'layouts/mail_from_membership' do

  %p
    = t('expire_alert_html', scope: message_scope, expire_date: @expire_date)

  %p
    = t('how_to_pay_fee', scope: message_scope)

  %p
    = t('mailers.login_here')
    = link_to(t('login_page'), new_user_session_url, target: '_blank')

  %p
    = t('company_link_login_msg', scope: message_scope)
    = link_to(@company.name,  company_url(@company), target: '_blank')

