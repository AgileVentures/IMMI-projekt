= form_for @user_checklist do |f|
  - if @user_checklist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_checklist.errors.count, "error")} prohibited this user_checklist from being saved:"
      %ul
        - @user_checklist.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :checklist
    = f.text_field :checklist
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
