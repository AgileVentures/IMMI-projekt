%header.entry-header
  %h1.entry-title
    Hundföretag av typen
    = @business_category.name
.post-title-divider
  %span
.entry-content
  -unless @business_category.description.nil?
    %p
      %b Beskrivning:
      = @business_category.description
  %table
    %thead
      %tr
        %th Namn
        %th Län
        - if current_user.try(:admin)
          %th Org nr
          %th
          %th
    %tbody
      - @companies.each do |company|
        - if company_complete? company
          - company.categories.each do |category|
            - if category.name == @business_category.name
              %tr.company
                %td= link_to company.name, company
                %td= company.region
                - if current_user.try(:admin)
                  %td= company.company_number
                  %td= link_to 'Edit', edit_company_path(company)
                  %td= link_to 'Delete', company, method: :delete, data: { :confirm => 'Are you sure?' }
