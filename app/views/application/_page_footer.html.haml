%footer.post-footer
  .post-social.no-gutter.col-xs-12
    .social-share
      %a.share-facebook{href: "http://www.facebook.com/sharer.php?u=#{request.url}", target: '_blank'}
        = fa_icon 'facebook-f'
      %a.share-twitter{href: "http://twitter.com/home/?status=#{request.url}", target: '_blank'}
        = fa_icon 'twitter'
      %a.share-googleplus{href: "https://plus.google.com/share?url=#{request.url}", target: '_blank'}
        = fa_icon 'google-plus'
      %a.share-linkedin{href: "http://www.linkedin.com/shareArticle?mini=true&title=Sveriges%20Hundf%C3%B6retagare&url=#{request.url}", target: '_blank'}
        = fa_icon 'linkedin'
      %a.share-mail{href: "mailto:?subject=Sveriges%20Hundf%C3%B6retagare&body=#{request.url}"}
        = fa_icon 'envelope'
