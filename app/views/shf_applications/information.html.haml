%header.entry-header
  %h1.entry-title= t('.title')
  .post-title-divider
    %span
.entry-content
  - if current_user.member?
    %h2
    = t('.member.title')
    = current_user.first_name
    = render partial: 'unpaid_member'
    - unless current_user.membership_expire_date.past?
      %p= t('.member.using_the_logo')
      %p "#{t('.member.upload_this_image')} http://www.sverigeshundforetagare.se"
      = image_tag('medlem.png')
      %p
      %p "#{t('.member.using_the_h_mark')} http://sverigeshundforetagare.se/agare/h-markt-av-sveriges-hundforetagare/"
      = image_tag('h-marke.png')
  - elsif current_user.shf_application.nil? == false && current_user.shf_application.state == 'accepted' && current_user.member? == false
    = render partial: 'unpaid_new_member'
  - elsif current_user.shf_application.nil? == false && current_user.shf_application.state != 'accepted' && current_user.member? == false
    = render partial: 'waiting_for_approval'
  - if current_user.shf_application.nil?
    %h2= t('.user.title')
    %p= t('.user.how_to_apply')
    %p= link_to t('menus.nav.users.apply_for_membership'), new_shf_application_path, class: 'btn btn-info'
    %p= t('.user.once_it_is_submitted')
    %p= t('.user.when_we_decide')
