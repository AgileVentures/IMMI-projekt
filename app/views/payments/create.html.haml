%header.entry-header
  %h1.entry-title
    - if @payment.payment_type == 'member_fee'
      - payment_type = t('payment.payment_type.member_fee')
    - else
      - payment_type = t('payment.payment_type.branding_fee')

    = t('.title', payment_type: payment_type, user_name: @payment.user.full_name)

  .post-title-divider
    %span

:javascript
  Hips.checkout({
          token: "#{@hips_id}",
          style: {
            'mainColor': '5692CE',
            'secondColor': '003A78',
            'font': 'Comic Sans MS'
          }
         });
