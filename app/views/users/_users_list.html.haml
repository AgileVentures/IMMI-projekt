#users-list
  %table.table
    %thead.panel-heading
      %tr
        %th= sort_link(q, :email, t('.email'), { default_order: { email: :desc, email: :asc } }, { remote: true } )
        %th= t('.created')
        %th= t('.last_login')
        %th= t('.logged_in_count')
        %th
          = t('.applications')
          %span.glyphicon.glyphicon-info-sign{ title: "#{t('.applications_tooltip')}",
                                               data: {toggle: 'tooltip'} }
        %th= t('.member')
    %tbody.panel-body
      = render partial: 'user', collection: users
