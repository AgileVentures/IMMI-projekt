#user-member-status
  = render partial: 'payor/term_status', locals: { entity: user,
  status_text: user.member? ? t('users.show.is_a_member') : t('users.show.not_a_member'),
  term_name: 'membership',
  term_end: user.membership_expire_date,
  next_term_end: User.next_payment_dates(user.id).last,
  can_make_payment: user.allow_pay_member_fee?,
  payment_text: t('users.show.pay_membership'),
   payment_action_path: payments_path(user_id: user.id, type: user.class::THIS_PAYMENT_TYPE),
  fee_name: 'membership fee',
  admin_edit_status_text: t('users.show.edit_member_status'),
  admin_edit_target_id: '#edit-status-modal' }
