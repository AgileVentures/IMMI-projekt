%header.entry-header
  %h1.entry-title Ansök om medlemskap
.post-title-divider
  %span
.entry-content.wpcf7
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    - f.label :first_name, 'First Name'
    = f.text_field :first_name, placeholder: 'Förnamn', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :last_name
    = f.text_field :first_name, placeholder: 'Efternamn', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :street
    = f.text_field :first_name, placeholder: 'Gatuadress (hela)', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :postal_code
    = f.text_field :first_name, placeholder: 'Postnummer', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :city
    = f.text_field :first_name, placeholder: 'Ort', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :phone
    = f.telephone_field :phone, placeholder: 'Telefon (0701223344)', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    %br/
    - f.label :email
    = f.email_field :email, placeholder: 'din@email.se', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :email_confirmation
    = f.email_field :email_confirmation , placeholder: 'Ange e-post igen', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :password
    - if @minimum_password_length
      - text = "Lösenord (minst #{@minimum_password_length} tecken)"
    = f.password_field :password, autocomplete: 'off', placeholder: "#{text}", class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    - f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Ange lösenordet igen', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    %br/
    - f.label :business_number
    = f.number_field :business_number, placeholder: 'Organisationsnr', class: 'wpcf7-form-control wpcf7-text wpcf7-validates-as-required'
    %br/
    .actions
      = f.submit 'Ansök om medlemsskap', class: 'wpcf7-form-control wpcf7-submit'
  = render 'devise/shared/links'
